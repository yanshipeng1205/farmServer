<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping	package="com.hibernate.domain">
		<class	name="Users" table="users">
			<id name="account" type="java.lang.String" column="account"/>
			<property name="password" type="java.lang.String" column="password" not-null="true"/>
			<property name="registerDate" type="java.sql.Date" column="registerDate" not-null="true"/>
			<property name="name" type="java.lang.String" column="name" not-null="true"/>
			<property name="onlineStatus" type="java.lang.Integer" column="onlineStatus"/>
			<property name="email" type="java.lang.String" column="email"/>
		</class>

</hibernate-mapping>